@{
    ViewBag.Title = "Login";
}
<section>
    <h3>Please Login to see the admin page</h3>
    <hr />
    @using (Html.BeginForm("Login", "Admin"))
    {
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            @Html.Label("Username")
            <div class="col-md-10">
                @Html.Editor("Username", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessage("Username", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Password")
            <div class="col-md-10">
                @Html.Password("Password", "", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessage("Password", new { @class = "text-danger" })
            </div>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Login" class="btn btn-default" />
            </div>
        </div>
    </div>
    }
</section>